<%- include("_loggedInHeader") -%>

<h1 class="display-5">Add New Transaction Type</h1>

<div>
    <h3>Existing Transaction Types:</h3>
    <ul>
      <% for (const type of types) { %>
        <li><%= type %></li>
      <% } %>
    </ul>
  </div>
<form action="/addnewtransactiontype" method="post">
    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="new_transaction_type">New Transaction Label</label>
        <div class="col-sm-7">
        <input type="text" style="max-width: fit-content;" class="form-control" name="new_transaction_type"/>
        </div>
    </div>
    <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/admin">Cancel</a>
    </div>
</form>
<%- include("_loggedInFooter") -%>