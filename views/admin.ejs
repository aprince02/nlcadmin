  <div class="button-group">
    <a class="btn btn-lg btn-secondary" href="/import-transactions">
      <i class="bi bi-file-earmark-arrow-up-fill"></i> Import Transactions
    </a>
  </div>
  <br>

  <!-- Group 4: Other Actions -->
  <div class="button-group">
    <a class="btn btn-lg btn-secondary" href="/update-users">
      <i class="bi bi-people-fill"></i> Update Users
    </a>
    <a class="btn btn-lg btn-secondary" href="/db-backup">
      <i class="bi bi-database-down"></i> Backup Database
    </a>
    <a class="btn btn-lg btn-secondary" href="/software-logs/1">
      <i class="bi bi-code-slash"></i> Logs
    </a>
  </div>
