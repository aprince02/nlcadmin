<%- include("_loggedInHeader") -%>

<div class="container text-center">
  <h1 class="display-2">Admin Console</h1>
  <br>

  <!-- Group 1: Add -->
  <div class="button-group">
    <a class="btn btn-lg btn-secondary" href="/addnewtransactiontype">
      <i class="bi bi-plus-circle"></i> Add New Transaction Type
    </a>
    <a class="btn btn-lg btn-secondary" href="/addnewdonationtype">
      <i class="bi bi-plus-circle"></i> Add New Donation Type
    </a>
  </div>
  <br>

  <!-- Group 2: Export -->
  <div class="button-group">
    <a class="btn btn-lg btn-secondary" href="/generate-transaction-pdf">
      <i class="bi bi-file-earmark-arrow-down-fill"></i> Export Transactions
    </a>
    <a class="btn btn-lg btn-secondary" href="/export-donations">
