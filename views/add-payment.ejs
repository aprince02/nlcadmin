<%- include("_loggedInHeader") -%>

<h1>Add New Payment</h1>

<form action="/add-payment/<%= id %>" method="post">
  <div class="form-horizontal">
    <br>
    <br>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="amount">Amount</label>
        <div class="col-sm-7">
          <input class="form-control" name="amount" placeholder="Enter amount e.g: 12.79"/>
        </div>
      </div>

    <br>
    <br>
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Add Payment" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/claimants">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_loggedInFooter") -%>