<%- include("_header") -%>

<h1 class="display-5">Register as a new user:</h1>

<form action="/register" method="post">
    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="username">Username</label>
        <div class="col-sm-7">
          <input required placeholder="Enter username" class="form-control" name="username"/>
        </div>
    </div>
    <%- include("_loginEditor") -%>
    <div id="passwordHelpBlock" class="form-text">
      Your password must be at least 8 characters long.
    </div>
    <br> 
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="security_question">Name of first school:</label>
      <div class="col-sm-7">
        <input required placeholder="Enter security question answer" type="text" class="form-control" name="security_question"/>
      </div>
    </div>
    <input type="submit" value="Register" class="btn btn-default btn-primary" />
  </form>
<%- include("_footer") -%>