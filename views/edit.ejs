<%- include("_loggedInHeader") -%>

<h1 class="display-5">Update Member</h1>

<form action="/edit/<%= member.id %>" method="post">
  <div class="form-horizontal">
    <a class="btn btn-default btn-info" href="/send-update-request/<%= member.id %>">Request Member to update details</a>

    <%- include("_claimantEditor") -%>
    <br>

    <div class="form-group row">
      <label class="col-form-label"></label>
      <div class="col-sm-5">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/claimants">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_loggedInFooter") -%>