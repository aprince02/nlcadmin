<%- include("_header") -%>

<h1>Update a Claimant record</h1>

<form action="/edit/<%= claimant.id %>" method="post">
  <div class="form-horizontal">

    <%- include("_claimantEditor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/claimants">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>