<form action="/add-donation/<%= row.id %>" method="post">
  <div class="form-horizontal">
    <br>
    <br>

    <%- include("_donationEditor") -%>
  
    <br>
    <br>
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Add Donation" class="btn btn-default btn-success" />
