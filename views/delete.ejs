<%- include("_loggedInHeader") -%>

<h1>Delete Claimant?</h1>

<form action="/delete/<%= claimant.id %>" method="post">
  <div class="form-horizontal">

    <%- include("_displayClaimant") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Delete" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/claimants">Cancel</a>
      </div>
    </div>
  </div>
</form>

