<%- include("_loggedInHeader") -%>

<h1 class="display-5">Import Transactions</h1>
<br>
<form action="/import-transactions" method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="csvfile" class="form-label">Choose or drag bank CSV file</label>
    <input required class="form-control" type="file" id="csvfile" name="csvfile" style="width: 500px;">
  </div>
  <br>
  <div class="col-sm-10">
    <input type="submit" value="Upload" class="btn btn-default btn-success" />
    <a class="btn btn-outline-dark cancel" href="/admin">Cancel</a>
  </div>
</form>

<%- include("_loggedInFooter") -%>